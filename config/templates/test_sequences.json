{
  "SMT_C1R_DUAL_BACKLIGHT": {
    "description": "SMT panel test for boards with dual backlight configuration",
    "panel_layout": {
      "rows": 2,
      "columns": 2,
      "boards": 4
    },
    "light_configuration": {
      "mainbeam": {
        "type": "standard",
        "relay_offset": 0,
        "description": "White LED mainbeam"
      },
      "backlight1": {
        "type": "standard",
        "relay_offset": 4,
        "description": "First backlight (amber)"
      },
      "backlight2": {
        "type": "standard",
        "relay_offset": 8,
        "description": "Second backlight (white)"
      }
    },
    "steps": [
      {"action": "test_light", "light": "mainbeam", "state": "on", "duration_ms": 500, "description": "Test mainbeam"},
      {"action": "test_light", "light": "mainbeam", "state": "off", "duration_ms": 100},
      {"action": "test_light", "light": "backlight1", "state": "on", "duration_ms": 500, "description": "Test backlight 1"},
      {"action": "test_light", "light": "backlight1", "state": "off", "duration_ms": 100},
      {"action": "test_light", "light": "backlight2", "state": "on", "duration_ms": 500, "description": "Test backlight 2"},
      {"action": "test_light", "light": "backlight2", "state": "off", "duration_ms": 100},
      {"action": "test_light", "light": ["backlight1", "backlight2"], "state": "on", "duration_ms": 500, "description": "Test both backlights"},
      {"action": "test_light", "light": ["backlight1", "backlight2"], "state": "off", "duration_ms": 100},
      {"action": "test_light", "light": ["mainbeam", "backlight1", "backlight2"], "state": "on", "duration_ms": 500, "description": "Test all lights"},
      {"action": "test_light", "light": ["mainbeam", "backlight1", "backlight2"], "state": "off", "duration_ms": 100}
    ]
  },
  "SMT_SS3_SINGLE": {
    "description": "SMT panel test for SS3 boards with single backlight",
    "panel_layout": {
      "rows": 2,
      "columns": 2,
      "boards": 4
    },
    "light_configuration": {
      "mainbeam": {
        "type": "standard",
        "relay_offset": 0,
        "description": "White LED mainbeam"
      },
      "backlight": {
        "type": "standard",
        "relay_offset": 4,
        "description": "LED backlight"
      }
    },
    "steps": [
      {"action": "test_light", "light": "mainbeam", "state": "on", "duration_ms": 500, "description": "Test mainbeam"},
      {"action": "test_light", "light": "mainbeam", "state": "off", "duration_ms": 100},
      {"action": "test_light", "light": "backlight", "state": "on", "duration_ms": 500, "description": "Test backlight"},
      {"action": "test_light", "light": "backlight", "state": "off", "duration_ms": 100},
      {"action": "test_light", "light": ["mainbeam", "backlight"], "state": "on", "duration_ms": 500, "description": "Test both lights"},
