    ]
  },
  "SMT_SS3_RGBW": {
    "description": "SMT panel test for SS3 boards with RGBW cycling backlight",
    "panel_layout": {
      "rows": 2,
      "columns": 2,
      "boards": 4
    },
    "light_configuration": {
      "mainbeam": {
        "type": "standard",
        "relay_offset": 0,
        "description": "White LED mainbeam"
      },
      "rgbw_backlight": {
        "type": "rgbw_cycling",
        "relay_offset": 4,
        "description": "RGBW cycling backlight",
        "rgbw_config": {
          "cycle_pattern": "standard",
          "on_time_ms": 50,
          "off_time_ms": 50,
          "cycles_to_advance": 1
        }
      }
    },
    "steps": [
      {"action": "test_light", "light": "mainbeam", "state": "on", "duration_ms": 500, "description": "Test mainbeam"},
      {"action": "test_light", "light": "mainbeam", "state": "off", "duration_ms": 100},
      {"action": "rgbw_cycle", "light": "rgbw_backlight", "pattern": {"on_ms": 50, "off_ms": 50}, "duration_ms": 3000, "description": "Cycle through RGBW colors"},
      {"action": "rgbw_test", "light": "rgbw_backlight", "sample_points": [200, 400, 600, 800, 1000], "duration_ms": 5000, "description": "Sample RGBW colors at specific points"},
      {"action": "test_light", "light": "rgbw_backlight", "state": "off", "duration_ms": 100}
    ]
  },
